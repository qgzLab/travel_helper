<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android" 
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent"
	 android:background="#FFFFFF"> 
<TextView 
    android:id="@+id/team_item_name" 
    android:layout_height="wrap_content" 
    android:textColor="#000000" 
    android:textStyle="bold"
	android:layout_width="200dp" 
	android:textSize="20sp"
	android:text="title"/>
 <TextView
     android:id="@+id/team_item_dest" 
     android:layout_height="wrap_content"
     android:textColor="#000000"  
	 android:layout_width="200dp" 
	 android:layout_below="@+id/team_item_name"
	 android:text="time"/>

 <TextView
     android:id="@+id/team_item_id"
     android:layout_width="10dp"
     android:layout_height="10dp"
     android:layout_marginLeft="50dp"
     android:textColor="#FFFFFF" 
     android:text="TextView" />

 <TextView
     android:id="@+id/team_item_leader"
     android:layout_width="10dp"
     android:layout_height="10dp"
     android:layout_toRightOf="@+id/team_item_id"
     android:text="TextView"
     android:textColor="#FFFFFF" />

 <TextView
     android:id="@+id/team_item_intro"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_alignParentRight="true"
     android:layout_below="@+id/team_item_leader"
     android:text="Large Text"
     android:textColor="#000000"
     android:textAppearance="?android:attr/textAppearanceLarge" />
 
</RelativeLayout>