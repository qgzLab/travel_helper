<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp" 
        android:background="#5fd4ff">
        <Button
	        android:id="@+id/read_back"
	        android:layout_height="40dp"
	        android:layout_width="40dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="10dp"
	        android:background="@drawable/back"/>
        
        <Button
	        android:id="@+id/read_img"
	        android:layout_height="40dp"
	        android:layout_width="40dp"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="210dp"
	        android:background="@drawable/user_img"  />

        <TextView
            android:id="@+id/read_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
	        android:layout_marginLeft="0dp"
	        android:textColor="#FFFFFF"
            android:text="登录"
            android:textAppearance="?android:attr/textAppearanceMedium" />     
    </LinearLayout>

    <TextView
        android:id="@+id/read_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="title" />
    
    <TextView
        android:id="@+id/read_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:gravity="center"
        android:text="author" />
    
     <TextView
        android:id="@+id/read_context"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="context" />
     
     <TextView
        android:id="@+id/read_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:textColor="#999999"
        android:gravity="right"
        android:text="time" />
     
     <TextView
        android:id="@+id/read_lv_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:textColor="#999999"
        android:gravity="center"
        android:text="-----评论区-----" />
     
     <ListView
	     android:id="@+id/read_lv"
	     android:layout_marginTop="30dp"
	     android:layout_marginLeft="5dp"
	     android:layout_width="fill_parent"
	     android:layout_height="200dp" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:background="#ffffff">
	     <Button
	         android:id="@+id/read_zan"
	         android:layout_width="40dp"
	         android:layout_height="40dp"
	         android:layout_marginLeft="265dp"
	         android:background="@drawable/zan" />

	     <TextView
	         android:id="@+id/read_num"
	         android:layout_width="40dp"
	         android:layout_height="40dp"
	         android:textColor="#000000"
	         android:text="(100)" />

	 </LinearLayout>
     
     <Button
        android:id="@+id/read_send"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="5dp"
        android:text="评论" 
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:background="#fe8e32"/>
     

</LinearLayout>
