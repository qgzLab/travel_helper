<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android" 
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent"
	 android:background="#FFFFFF"> 
<TextView 
    android:id="@+id/place_name" 
    android:layout_height="wrap_content" 
    android:textColor="#000000" 
    android:textStyle="bold"
	android:layout_width="200dp" 
	android:textSize="20sp"
	android:text="title"/>
 <TextView
     android:id="@+id/place_price" 
     android:layout_height="wrap_content"
     android:textColor="#000000"  
	 android:layout_width="200dp" 
	 android:layout_below="@+id/place_name"
	 android:text="time"/>

 <ImageView
     android:id="@+id/place_img"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="100dp"
     android:layout_alignBottom="@+id/place_price"
     android:layout_alignParentTop="true"
     android:layout_toRightOf="@+id/place_price"
     android:src="@drawable/diary_item" />

 <TextView
     android:id="@+id/place_id"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:layout_alignBaseline="@+id/place_price"
     android:layout_alignBottom="@+id/place_price"
     android:layout_marginLeft="50dp"
     android:layout_toRightOf="@+id/place_price"
     android:textColor="#FFFFFF" 
     android:text="TextView" />
 
</RelativeLayout>
