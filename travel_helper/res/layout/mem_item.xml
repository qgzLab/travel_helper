<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout 
     xmlns:android="http://schemas.android.com/apk/res/android" 
	 android:layout_height="fill_parent" 
	 android:layout_width="fill_parent"
	 android:background="#FFFFFF"> 
<TextView 
    android:id="@+id/mem_name" 
    android:layout_height="wrap_content" 
    android:textColor="#000000" 
    android:textStyle="bold"
	android:layout_width="200dp" 
	android:textSize="20sp"
	android:text="title"/>
 <TextView
     android:id="@+id/mem_intro" 
     android:layout_height="wrap_content"
     android:textColor="#000000"  
	 android:layout_width="200dp" 
	 android:layout_below="@+id/mem_name"
	 android:text="time"/>


 <TextView
     android:id="@+id/mem_id"
     android:layout_width="0dp"
     android:layout_height="0dp"
     android:layout_alignBaseline="@+id/mem_intro"
     android:layout_alignBottom="@+id/mem_intro"
     android:layout_marginLeft="50dp"
     android:layout_toRightOf="@+id/mem_intro"
     android:textColor="#FFFFFF" 
     android:text="TextView" />

 <TextView
     android:id="@+id/mem_img"
     android:layout_width="50dp"
     android:layout_height="20dp"
     android:layout_marginLeft="305dp"
     android:layout_marginTop="10dp"
     android:textColor="#000000"
     android:textSize="16dp" />
 
</RelativeLayout>